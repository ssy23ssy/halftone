<div class="container">
  <%= form_for :spend, url: travel_spend_index_path(@travel), method: :post do |f| %>
      <p>오늘 며칠차?</p>
      <select name="day" id="day"> <!-- 몇일차인지 옵션으로로 직접 넣어줌 -->
        <% @travel.period.times do |i| %> <!-- @travel에 설정된 기간만큼 반복 -->
            <% if @travel.spends.ex_period(i) %> <!-- i+1차가 이미 입력되어 있으면 옵션에 안뜸 -->
                <option value="<%= i+1 %>"><%= i+1 %></option>
            <% end %>
        <% end %>
      </select>
      <div class="form-group">
        <p>식비</p>
        <%= f.label :food %>
        <%= f.text_field :food, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>숙박비</p>
        <%= f.label :sleep %>
        <%= f.text_field :sleep, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>교통비</p>
        <%= f.label :trans %>
        <%= f.text_field :trans, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>자유경비</p>
        <%= f.label :free %>
        <%= f.text_field :free, class: "form-control" %>
      </div>
      <div class="btn-group">
        <%= f.submit "제출", class: "btn btn-default" %>
        <%= link_to "돌아가기", travel_path(@travel), class: "btn btn-default" %>
      </div>
  <% end %>
</div>
